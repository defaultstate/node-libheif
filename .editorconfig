# For details about EditorConfig see: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true


[package.json,binding.gyp]
indent_size = 2


[*.md]
# Disabled for markdown in order to support newlines without new paragraph (using a line ending with two spaces)
trim_trailing_whitespace = false
